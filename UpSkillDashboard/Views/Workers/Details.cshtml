@model UpSkillDashboard.Models.Worker

@{
    ViewData["Title"] = "Worker Details";
}

<div class="container px-4">
    <h2 class="text-primary">Worker Details</h2>

    <div class="card shadow p-4">
        <div class="mb-3">
            <strong>Name:</strong> @Model.User.Name
        </div>
        <div class="mb-3">
            <strong>Email:</strong> @Model.User.Email
        </div>
        <div class="mb-3">
            <strong>Phone Number:</strong> @Model.User.PhoneNumber
        </div>
        <div class="mb-3">
            <strong>Profession:</strong> @Model.Profession
        </div>
        <div class="mb-3">
            <strong>Experience:</strong> @Model.Experience years
        </div>
        <div class="mb-3">
            <strong>Hourly Rate:</strong> @Model.HourlyRate
        </div>

        <a href="@Url.Action("Edit", new { id = Model.WorkerId })" class="btn btn-warning">Edit</a>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
    </div>
</div>
