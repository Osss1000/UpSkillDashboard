@model IEnumerable<UpSkillDashboard.Models.Worker>

@{
    ViewData["Title"] = "Workers";
}

<div class="container px-4">
    <h2 class="text-primary">Workers List</h2>

    <a href="@Url.Action("Create")" class="btn btn-success mb-3">Add New Worker</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Profession</th>
                <th>Experience (Years)</th>
                <th>Hourly Rate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var worker in Model)
            {
                <tr>
                    <td>@worker.User.Name</td>
                    <td>@worker.User.Email</td>
                    <td>@worker.User.PhoneNumber</td>
                    <td>@worker.Profession</td>
                    <td>@worker.Experience</td>
                    <td>@worker.HourlyRate</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = worker.WorkerId })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Details", new { id = worker.WorkerId })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Delete", new { id = worker.WorkerId })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
