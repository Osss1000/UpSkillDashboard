@model UpSkillDashboard.Models.ClientPost

<h2>Delete Client Post</h2>

<p>Are you sure you want to delete this post?</p>

<table class="table">
    <tr>
        <th>Title:</th>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <th>Client:</th>
        <td>@Model.Client.User.Name</td> <!-- ✅ Updated to include Client Name -->
    </tr>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ClientPostId" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>