@model UpSkillDashboard.Models.VolunteeringJob

<h2>Delete Volunteering Job</h2>

<p>Are you sure you want to delete this job?</p>

<table class="table">
    <tr>
        <th>Title:</th>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <th>Organization:</th>
        <td>@Model.Organization.User.Name</td>
    </tr>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="VolunteeringJobId" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>