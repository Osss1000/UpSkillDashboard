@model IEnumerable<UpSkillDashboard.Models.PaidJob>

@{
    ViewData["Title"] = "Paid Jobs";
}

<div class="container px-4">
    <h2 class="text-primary">Paid Jobs</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Organization</th>
                <th>Location</th>
                <th>Salary</th>
                <th>Needed</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
            {
                <tr>
                    <td>@job.Title</td>
                    <td>@job.Organization.Name</td>
                    <td>@job.Location</td>
                    <td>@(job.Price.HasValue ? $"${job.Price}" : "N/A")</td>
                    <td>@job.NumberOfPeopleNeeded</td>
                    <td>@job.CreatedDate.ToString("dd MMM yyyy")</td>
                    <td>
                        <a href="@Url.Action("Details", new { id = job.PaidJobId })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Delete", new { id = job.PaidJobId })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
