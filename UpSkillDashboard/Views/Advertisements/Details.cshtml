@model UpSkillDashboard.Models.Advertisement

@{
    ViewData["Title"] = "Advertisement Details";
}

<h2>Advertisement Details</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <p class="card-text">@Model.Description</p>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Value:</strong> @Model.Value</li>
            <li class="list-group-item"><strong>Start Date:</strong> @Model.StartDate.ToString("dd-MM-yyyy")</li>
            <li class="list-group-item"><strong>End Date: </strong>@Model.EndDate.ToString("dd-MM-yyyy")</li>
            <li class="list-group-item"><strong>Sponsor: </strong>@Model.Sponsor.Name</li>
            <li class="list-group-item"><strong>Status: </strong>@(Model.IsActive ? "Active" : "Inactive")</li>
            <li class="list-group-item"><strong>Description: </strong>@Model.Description</li>
        </ul>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.AdvertisementId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" asp-route-sponsorId="@Model.SponsorId" class="btn btn-secondary">Back to List</a>
</div>
