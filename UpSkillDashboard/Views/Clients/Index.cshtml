@model IEnumerable<UpSkillDashboard.Models.Client>

@{
    ViewData["Title"] = "Clients";
}

<div class="container px-4">
    <h2 class="text-primary">Clients List</h2>

    <a href="@Url.Action("Create")" class="btn btn-success mb-3">Add New Client</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>National ID</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
                <tr>
                    <td>@client.User.Name</td>
                    <td>@client.User.Email</td>
                    <td>@client.User.PhoneNumber</td>
                    <td>@client.NationalId</td>
                    <td>@client.Address</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = client.ClientId })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Details", new { id = client.ClientId })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Delete", new { id = client.ClientId })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
